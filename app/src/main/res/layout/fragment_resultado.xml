<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#263238"
    tools:context=".ResultadoFragment">

    <TextView
        android:id="@+id/textViewResultTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESULTADO"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/cardResultado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/edittext_background_white"
        android:padding="24dp"
        android:elevation="4dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewResultTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textViewResultadoIMC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="seu imc é de: 0.0"
            android:textSize="22sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp"/>
        <TextView
            android:id="@+id/textViewClassificacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Classificação: -"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageViewTabela"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/resultado"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintTop_toBottomOf="@+id/cardResultado"
        app:layout_constraintBottom_toTopOf="@+id/btnVoltarAoInicio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:src="@tools:sample/avatars"/>

    <Button
        android:id="@+id/btnVoltarAoInicio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="VOLTAR AO INÍCIO"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:background="@drawable/button_background_gradient"
        app:backgroundTint="@null"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8" />

</androidx.constraintlayout.widget.ConstraintLayout>