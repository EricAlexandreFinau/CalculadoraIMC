<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#263238"
    tools:context=".CalcularFragment">

    <ImageView
        android:id="@+id/imageViewCalcular"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/calcular"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewCalcTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CALCULAR IMC"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/imageViewCalcular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editTextPesoCalc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="PESO (ex: 70.5)"
        android:inputType="numberDecimal"
        android:background="@drawable/edittext_background_white"
        android:padding="16dp"
        android:elevation="4dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewCalcTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editTextAlturaCalc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="ALTURA (ex: 1.75)"
        android:inputType="numberDecimal"
        android:background="@drawable/edittext_background_white"
        android:padding="16dp"
        android:elevation="4dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextPesoCalc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewGeneroLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GÃŠNERO"
        android:layout_gravity="center_horizontal"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextAlturaCalc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/toggleGroupGeneroCalc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:selectionRequired="true"
        app:singleSelection="true"
        app:strokeColor="@android:color/white"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewGeneroLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnMasculinoCalc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="MASCULINO"
            android:textColor="@android:color/white"
            style="?attr/materialButtonOutlinedStyle" />

        <Button
            android:id="@+id/btnFemininoCalc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="FEMININO"
            android:textColor="@android:color/white"
            style="?attr/materialButtonOutlinedStyle" />
    </com.google.android.material.button.MaterialButtonToggleGroup>

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="CALCULAR"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:background="@drawable/button_background_gradient"
        app:backgroundTint="@null"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/toggleGroupGeneroCalc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>